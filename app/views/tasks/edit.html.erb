<h2>Edit Task</h2>

<%= form_with(model: @task, local: true) do |f| %>
  <div>
    <%= f.label :title, "Title" %><br>
    <%= f.text_field :title %>
  </div>

  <div>
    <%= f.label :details, "Details" %><br>
    <%= f.text_area :details %>
  </div>

  <div>
    <%= f.label :completed, "Completed?" %>
    <%= f.check_box :completed %>
  </div>

  <div>
    <%= f.submit "Update Task" %>
  </div>
<% end %>

<%= link_to "Back to Task", task_path(@task) %> |
<%= link_to "Back to List", tasks_path %>
