<h2>My Tasks</h2>

<p>
  <%= link_to "Add Task", new_task_path, class: "btn btn-primary" %>
</p>

<ul>
  <% @tasks.each do |task| %>
    <li>
      <%= link_to task.title, task_path(task) %>
      <%= link_to "Delete",
          task_path(task),
          data: { turbo_method: :delete,
                  turbo_confirm: "Êtes-vous sûr de vouloir supprimer cette tâche ?" },
          class: "btn btn-danger btn-sm" %>
    </li>
  <% end %>
</ul>
